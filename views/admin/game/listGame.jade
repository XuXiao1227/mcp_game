.container-fluid(style="padding-left:0px")
    form.form-inline
        label.control-label(for=id + '_code', style="font-size:16px;") 编码&nbsp;&nbsp;
        input.form-control(id=id + '_code', type='text', placeholder="编码", value=cond.code)
.container-fluid(style="padding-left:0px")
    .row(style="padding-top:6px;")
        .col-sm-12
            button.btn.btn-default(id=id + '_search', type="button", data-loading-text="处理中..", autocomplete="off") 搜索
.container-fluid(style="padding-left:0px;padding-top:6px;")
    table.table.table-striped.table-bordered.table-hover
        thead
            tr
                td 编码
                td 名称
                td 状态
                td 操作
        tbody
            - each val in rst
                tr
                    td=val.code
                    td=val.name
                    td=val.status.des
                    td
                        if val.status.id == 0
                            button.btn.btn-default(type="button", flag=id + "_open", tId=val.id) 开售
                        if val.status.id == 1
                            button.btn.btn-default(type="button", flag=id + "_stop", tId=val.id) 停售
.container-fluid(id=id + '_pageBar', style="padding-left:0px;")
script(type='text/javascript', src='./js/' + jadePath + '.js')
script(type='text/javascript')
    |CurSite.IMPL['#{id}'] = new CurSite.COMP.AdminGameListGame({id:'#{id}', parent:'#{parent}', skip:'#{skip}', limit:'#{limit}', count:'#{count}'});