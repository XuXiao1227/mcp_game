.modal.fade.bs-example-modal-lg(id=id + '_myModal', tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
    .modal-dialog(style="width:900px;")
        .modal-content
            .modal-header
                button.close(type="button", data-dismiss="modal", aria-label="Close")
                    span(aria-hidden="true") &times;
                h4.modal-title 章节详情
            .modal-body(id=id + '_myModalBody')
                p 数据加载中...
            .modal-footer
                button.btn.btn-primary(type=id + '_close', data-dismiss="modal") 关闭
.container-fluid(style="padding-left:0px")
    .btn-group
        button.btn.btn-default(id=id + "_add", url="./book_addChapter.html") 新建章节
.container-fluid(style="padding-left:0px;padding-top:6px;")
    table.table.table-striped.table-bordered.table-hover
        thead
            tr
                td 序号
                td 名称
                td 创建时间
                td 操作
        tbody
            - each val in rst
                tr
                    td='第' + val.seq + '章'
                    td=val.name
                    td=val.create_time
                    td
                        button.btn.btn-default(type="button", flag=id + "_detail", tId=val.id) 详情
                        button.btn.btn-default(type="button", flag=id + "_delete", tId=val.id) 删除
.container-fluid(id=id + '_pageBar', style="padding-left:0px;")
script(type='text/javascript', src='./js/' + jadePath + '.js')
script(type='text/javascript')
    |CurSite.IMPL['#{id}'] = new CurSite.COMP.BookChapterList({id:'#{id}', parent:'#{parent}', bookId:'#{bookId}', skip:'#{skip}', limit:'#{limit}', count:'#{count}'});